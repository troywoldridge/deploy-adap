{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["components/*"],
      "@/styles/*": ["styles/*"],
      "@/lib/*": ["lib/*"]
    }
  },
  "include": [
    ".",                          // âœ… this ensures all files inside src/ (including app/) are included
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/scripts/processOptions.mjs",
    "src/services/LoginInfo.ts"
  ],
  "exclude": [
    "node_modules",
    "next.config.ts",
    "tailwind.config.ts"
  ]
}

